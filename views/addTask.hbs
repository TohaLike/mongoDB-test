<form action="/addTask" method="POST">
    <h2>Создайте новую задачу...</h2>

    <div class="inputfailed">
        <input class="wrtie-inputs" type="text" required name="nameOfProject" placeholder="Название проекта">
        <input class="wrtie-inputs" type="text" required name="description" placeholder="Описание">
        <input class="wrtie-inputs" type="text" required name="dataStarted" placeholder="Дата начала">
        <input class="wrtie-inputs" type="text" required name="dataEndend" placeholder="Дата окончания">
        <input class="wrtie-inputs" type="text" required name="team" placeholder="Штат">
        <input class="wrtie-inputs" type="text" required name="client" placeholder="Клиент">
        <input class="wrtie-inputs" type="text" required name="projectId" placeholder="Код проекта">
        
        <label>Новая задача</label>
    </div>

    <button type="submit" class="btn add__employee">Добавить задачу</button>
</form>
