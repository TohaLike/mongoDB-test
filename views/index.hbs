<h2>Todos page</h2>

{{#if todos.length}}
    <ul>
        {{#each todos}}
            <li class="todo">
                <form action="/complete" method="POST">
                    <label>
                        {{#if complited}}
                        <input type="checkbox" checked name="complited">
                        <span class="main__title completed">{{firstName}}</span>
                        <span class="main__title completed">{{lastName}}</span>
                        <span class="main__title completed">{{email}}</span>
                        <span class="main__title completed">{{mobilePhone}}</span>
                        {{else}}
                        <input type="checkbox" name="complited">
                        <span class="main__title">{{firstName}}</span>
                        <span class="main__title">{{lastName}}</span>
                        <span class="main__title">{{email}}</span>
                        <span class="main__title">{{mobilePhone}}</span>                        
                        {{/if}}
                        
                        <input type="hidden" value="{{_id}}" name="id">
                        
                        <button class="btn btn-small" type="submit">Save</button>
                    </label>                        
                </form>
            </li>
        {{/each}}
    </ul>

    {{else}}
    
    <p>No todos!</p>

{{/if}}